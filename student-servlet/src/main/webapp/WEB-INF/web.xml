<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  <servlet-name>StudentController</servlet-name>
  <servlet-class>com.crnts.controller.StudentController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>StudentController</servlet-name>
  <url-pattern>/student</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>ErrorMessageController</servlet-name>
  <servlet-class>com.crnts.controller.ErrorMessageController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>ErrorMessageController</servlet-name>
  <url-pattern>/errormessage</url-pattern>
  </servlet-mapping>
  <error-page>
   <error-code>500</error-code>
   <location>/errormessage</location>
  </error-page>
</web-app>
